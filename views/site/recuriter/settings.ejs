<div class="product-review-section px-4 py-0">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-12">
                <ul class="nav nav-tabs product-tab" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home"
                            type="button" role="tab" aria-controls="home" aria-selected="true">
                            Change Password
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                            type="button" role="tab" aria-controls="profile" aria-selected="false" tabindex="-1">
                            Delete Account
                        </button>
                    </li>
                </ul>
            </div>
            <div class="col-lg-10">
                <div class="tab-content mt-40 mb-45" id="myTabContent">
                    <div class="tab-pane fade text-center active show" id="home" role="tabpanel"
                        aria-labelledby="home-tab">
                        <form id="updateFormSitewithPatch" class="checkout-form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label>New Password</label>
                                    <input type="password" placeholder="New Password" name="password"
                                        class="single-input-wrapper">
                                </div>
                                <div class="col-lg-6">
                                    <label>Re-Enter Password</label>
                                    <input type="hidden" id="endapi" value="<%= endApi %>">
                                    <input type="password" placeholder="Re-Enter Password" name="confirm_password"
                                        class="single-input-wrapper">
                                </div>
                                <div class="col signup-form">
                                    <div class="submit-btn">
                                        <Button id="submitFormBtn" type="submit" class="signup-btn btn-1">
                                            Change Password
                                        </Button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="row align-items-center">
                            <div class="col-lg-7 col-md-12">
                                <div class="description-content mb-30">
                                    <button class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#deleteConfirmModal">
                                        Delete Account
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-white">
                <h2 class="modal-title fs-5" id="deleteConfirmLabel">
                    Confirm Deletion
                </h2>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p>Are you sure you want to <strong>permanently delete</strong> this item? This action cannot be undone.
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="confirmDeleteBtn" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>