<div class="checkout-section px-4 py-0">
    <!-- <input type="hidden" id="endapi" value="<%# endApi %>"> -->
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="blog-sidebar-wrap widget-wrapper pb-20">
                    <div class="sidebar-widget-wrap">
                        <h4 class="widget-title">Add Job</h4>
                        <form id="updateFormSite" class="checkout-form">
                            <div class="row">
                                <div class="col-12 m-0">
                                    <div class="user-profile-data">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Job Title</label>
                                                <input type="text" placeholder="Name" name="name"
                                                    class="single-input-wrapper">
                                            </div>
                                        </div> <!-- /.row -->
                                    </div> <!-- /.user-profile-data -->
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label>Category</label>
                                    <select id="categorySelect" class="single-input-wrapper select2" name="country"
                                        style="width: 100%;">
                                    </select>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label>Employment Type</label>
                                    <select id="employmentTypeSelect" class="single-input-wrapper select2"
                                        name="country" style="width: 100%;">
                                    </select>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label>Skills</label>
                                    <select id="jobskills" multiple class="single-input-wrapper select2" name="skills"
                                        style="width: 100%;">
                                    </select>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label>Tags</label>
                                    <select id="jobTags" multiple class="single-input-wrapper select2" name="tags"
                                        style="width: 100%;">
                                    </select>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>Country</label>
                                    <select id="countrySelect" class="single-input-wrapper select2" name="country"
                                        style="width: 100%;">
                                        <option value="<%= country.isoCode %>" selected>
                                            <%= country.name %>
                                        </option>
                                    </select>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>State</label>
                                    <select id="stateSelect" class="single-input-wrapper select2" name="state"
                                        style="width: 100%;">
                                        <option value="<%= state.isoCode %>" selected>
                                            <%= state.name %>
                                        </option>
                                    </select>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>Town/City</label>
                                    <select id="citySelect" class="single-input-wrapper select2" name="city"
                                        style="width: 100%;">
                                        <option value="<%= city.name %>" selected>
                                            <%= city.name %>
                                        </option>
                                    </select>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>Salary</label>
                                    <div class="price__slider">
                                        <div class="price_range" action="#">
                                            <input type="text" id="amount" readonly=""
                                                style="border:0; color:#000; font-weight:bold;">
                                        </div>

                                        <div id="slider-range"
                                            class="ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content">
                                            <div class="ui-slider-range ui-corner-all ui-widget-header"
                                                style="width: 30.8%; left: 23.6%;"></div>
                                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"
                                                style="left: 23.6%;"></span>
                                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"
                                                style="left: 54.4%;"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>Salary Range</label>
                                    <select class="single-input-wrapper" name="salaryRange" style="width: 100%;">
                                        <option value="Monthly">Monthly</option>
                                        <option value="Yearly">Yearly</option>
                                        <option value="Weekly">Weekly</option>
                                        <option value="Daily">Daily</option>
                                        <option value="Hourly">Hourly</option>
                                    </select>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>Job Experience</label>
                                    <select class="single-input-wrapper" name="salaryRange" style="width: 100%;">
                                        <option value="0-6">0-6 months</option>
                                        <option value="0-1">0-1 year</option>
                                        <option value="1-2">1-2 year</option>
                                        <option value="2-3">2-3 year</option>
                                        <option value="3-4">3-4 year</option>
                                        <option value="4-5">4-5 year</option>
                                        <option value="5">Above 5 year</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label>Short Description</label>
                                    <textarea placeholder="description" id="description" name="description"
                                        spellcheck="false"></textarea>
                                </div>
                                <div class="col-12 mb-2">
                                    <label>Content</label>
                                    <textarea placeholder="description" id="summernote" name="description"
                                        spellcheck="false"></textarea>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <label>Status</label>
                                    <select class="single-input-wrapper" name="country" style="width: 100%;">
                                        <option value="true"> Active </option>
                                        <option value="false"> Inactive </option>
                                    </select>
                                </div>
                                <div class="col-12 signup-form">
                                    <div class="submit-btn">
                                        <Button id="submitFormBtn" type="submit"
                                            class="signup-btn btn-1">Submit</Button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>