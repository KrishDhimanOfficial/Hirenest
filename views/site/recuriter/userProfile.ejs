<div class="checkout-section pt-150 pt-lg-120 pb-130 pb-lg-70">
    <div class="container">
        <form action="#" class="checkout-form">
            <div class="row">
                <div class="col-lg-8">
                    <h3 class="cart-title">Create Profile</h3>
                    <div class="user-profile-data">
                        <div class="row">
                            <div class="col-lg-6">
                                <label>First Name</label>
                                <input type="text" placeholder="First Name*" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-6">
                                <label>Last Name</label>
                                <input type="text" placeholder="Last Name*" class="single-input-wrapper">
                            </div>
                            <div class="col-12">
                                <label>Company Name</label>
                                <input type="text" placeholder="Company Name*" class="single-input-wrapper">
                            </div>
                            <div class="col-12">
                                <label>Street Address</label>
                                <input type="text" placeholder="Street Address*" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-4">
                                <label>Town/City</label>
                                <input type="text" placeholder="Town/City*" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-4">
                                <label>State</label>
                                <input type="text" placeholder="State*" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-4">
                                <label>Zip Code</label>
                                <input type="text" placeholder="Zip Code*" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-6">
                                <label>Email Id</label>
                                <input type="email" placeholder="Email Address*" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-6">
                                <label>Phone Number</label>
                                <input type="number" placeholder="Phone Number*" class="single-input-wrapper">
                            </div>
                            <div class="col-12">
                                <ul class="checkbox-list style-none">
                                    <li>
                                        <input type="checkbox" id="new-account">
                                        <label for="new-account">Create Account?</label>
                                    </li>
                                    <li>
                                        <input type="checkbox" id="shipping">
                                        <label for="shipping">Ship to Different Address?</label>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-12">
                                <div class="other-note-area">
                                    <label>Order notes (optional)</label>
                                    <textarea placeholder="Write your text" spellcheck="false"></textarea>
                                </div> <!-- /.other-note-area -->
                            </div>
                        </div> <!-- /.row -->
                    </div> <!-- /.user-profile-data -->
                </div>
            </div>
        </form>
    </div>
</div>