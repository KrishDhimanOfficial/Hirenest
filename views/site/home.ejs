<main>
    <!-- hero start -->
    <div class="hero-section-2">
        <div class="container">
            <div class="row align-items-center justify-content-xl-between justify-content-center">
                <div class="col-xxl-7 col-xl-6 col-lg-10">
                    <div class="hero-content-2">
                        <div class="sub-title">
                            <p>All The best Platform</p>
                        </div>
                        <div class="title">
                            <h1>Find Your Dream Job Today</h1>
                        </div>
                        <div class="description">
                            <p>Drive innovation by developing cutting-edge multimedia solutions for online platforms.
                            </p>
                        </div>
                        <div class="subscribe-form">
                            <form action="/find/jobs" method="get">
                                <div class="input-wrap">
                                    <input type="text" name="search" placeholder="Find your dream job">
                                    <button class="submit-btn" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 text-center mt-lg-50 mt-md-50 mt-xs-50">
                    <div class="hero-img-wrapper">
                        <div class="main-img-2">
                            <img src="/assets/img/mainBanner.jpg" alt="thumb">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- hero end -->
    <div class="categories-section-2 pt-150 pb-120 pt-lg-120 pb-lg-90 pt-md-80 pb-md-50 pt-xs-50 pb-xs-20">
        <div class="container">
            <div class="row text-center">
                <div class="col-xl-12">
                    <div class="section-title mb-50">
                        <div class="title">
                            <h2>Explore Top Skills</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-cols-xl-5 row-cols-lg-3 row-cols-md-2 row-cols-1 text-center justify-content-center">
                <% skillJobs.forEach(skillJob=> { %>
                    <% if (skillJob.count> 0) { %>
                        <div class="col">
                            <div class="course-category-wrap">
                                <div class="content">
                                    <h4>
                                        <a href="/find/jobs?skill=<%= skillJob.slug %>">
                                            <%= skillJob.name %>
                                        </a>
                                    </h4>
                                    <p>(<%= skillJob.count %>) Jobs</p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% }) %>
            </div>
        </div>
    </div>
    <!-- About start -->
    <div class="about-section-2 pt-180 pb-150 pb-lg-120 pb-md-80 pb-xs-50">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-6 col-lg-6 mb-lg-50 mb-md-50 mb-xs-50">
                    <div class="about-img-wrapper-2">
                        <div class="about-main-img">
                            <img src="/assets/img/aboutus.jpg" loading="lazy" alt="main img">
                        </div>
                        <div class="shape-4 d-none d-xl-inline-block">
                        </div>
                        <div class="bubble-1 d-none d-xl-inline-block"></div>
                        <div class="bubble-2 d-none d-xl-inline-block"></div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6">
                    <div class="about-content-2 " data-aos="fade-left">
                        <div class="sub-title">
                            <p>About Us</p>
                        </div>
                        <div class="title">
                            <h2>
                                <%= settings.aboutTitle %>
                            </h2>
                        </div>
                        <div class="description">
                            <p>
                                <%- settings.desc %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About end -->

    <!-- Counter start -->
    <div class="counter-section-2 pt-80 pb-30 pt-xs-60 pb-xs-10">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="counter-wrap-2 justify-content-xl-start justify-content-center mb-50">
                        <div class="icon">
                            <!-- <img src="assets/img/icon/add-user.svg" alt="icon"> -->
                            <i class="fa-solid fa-suitcase text-white"></i>
                        </div>
                        <div class="counter-info">
                            <div class="number">
                                <h3 class="odometer" data-count="<%= totalJobs %>">
                                    <%= totalJobs %>
                                </h3>
                            </div>
                            <div class="counter-info-divider mt-15 mb-15"></div>
                            <div class="text">
                                <p>Total Jobs</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="counter-wrap-2 justify-content-xl-start justify-content-center mb-50">
                        <div class="icon">
                            <i class="fa-solid fa-user text-white"></i>
                        </div>
                        <!-- user -->
                        <div class="counter-info">
                            <div class="number">
                                <h3 class="odometer" data-count="<%= totalrecuriters %>">
                                    <%= totalrecuriters %>
                                </h3>
                            </div>
                            <div class="counter-info-divider mt-15 mb-15"></div>
                            <div class="text">
                                <p>Total Recuriters</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="counter-wrap-2 justify-content-xl-start justify-content-center mb-50">
                        <div class="icon">
                            <i class="fa-solid fa-user text-white"></i>
                        </div>
                        <div class="counter-info">
                            <div class="number">
                                <h3 class="odometer" data-count="<%= totalcandidates %>">
                                    <%= totalcandidates %>
                                </h3>
                            </div>
                            <div class="counter-info-divider mt-15 mb-15"></div>
                            <div class="text">
                                <p>Total Job Seekers</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="counter-wrap-2 justify-content-xl-start justify-content-center mb-50">
                        <div class="icon">
                            <i class="fa-solid fa-user text-white"></i>
                        </div>
                        <div class="counter-info">
                            <div class="number">
                                <h3><span class="odometer" data-count="<%= totalusers %>">
                                        <%= totalusers %>
                            </div>
                            <div class="counter-info-divider mt-15 mb-15"></div>
                            <div class="text">
                                <p>Total Users</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Counter end -->

    <!-- Choose  start -->
    <div class="choose-section-3 overflow-hidden pt-80 pb-80 pt-xs-50 pb-xs-50">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-6 col-lg-6">
                    <div class="about-us-choose-content">
                        <div class="section-title">
                            <div class="sub-title mb-10">
                                <p>Why Choose Us</p>
                            </div>
                            <div class="title">
                                <h2>
                                    <%= settings.chooseus_title %>
                                </h2>
                            </div>
                        </div>
                        <div class="text">
                            <p> <%- settings.chooseus_desc %>
                            </p>
                        </div>
                        <div class="choose-btn-2">
                            <div class="theme-btn">
                                <a href="/signup">Get Started</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 text-center mt-md-50 mt-xs-50">
                    <div class="choose-3-thumb">
                        <div class="thumb" style="width: 100%;height: 100%;">
                            <img src="/assets/img/aboutus-2.jpg" alt="thumb" style="border-radius: 10%;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Choose  end -->
    <div class="partner-section-2 pt-150 pb-150 pt-lg-120 pb-lg-120 pt-md-80 pb-md-80 pt-xs-50 pb-xs-50">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-title text-center mb-50 aos-init aos-animate" data-aos="fade-up"
                        data-aos-delay="200">
                        <div class="sub-title mb-10">
                            <p>Top Companies</p>
                        </div>
                        <div class="title">
                            <h2>Trusted by 100+ Company</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <% companies.forEach(company=> { %>
                    <div class="col-md-2">
                        <div class="brand-item">
                            <img src="/uploads/logo/<%= company.image %>" loading="lazy"
                                style="width: 150px; height: 150px; border-radius: 50%;" alt="thumb">
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
</main>