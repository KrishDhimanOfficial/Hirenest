<main>
    <!-- About start -->
    <div class="about-section-2 pt-180 pb-150 pb-lg-120 pb-md-80 pb-xs-50">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-6 col-lg-6 mb-lg-50 mb-md-50 mb-xs-50">
                    <div class="about-img-wrapper-2">
                        <div class="about-main-img">
                            <img src="/assets/img/aboutus.jpg" loading="lazy" alt="main img">
                        </div>
                        <div class="shape-4 d-none d-xl-inline-block">
                        </div>
                        <div class="bubble-1 d-none d-xl-inline-block"></div>
                        <div class="bubble-2 d-none d-xl-inline-block"></div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6">
                    <div class="about-content-2 " data-aos="fade-left">
                        <div class="sub-title">
                            <p>About Us</p>
                        </div>
                        <div class="title">
                            <h2>
                                <%= settings.aboutTitle %>
                            </h2>
                        </div>
                        <div class="description">
                            <p>
                                <%- settings.desc %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About end -->

    <!-- Choose  start -->
    <div class="choose-section-3 overflow-hidden pt-80 pb-80 pt-xs-50 pb-xs-50">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-6 col-lg-6">
                    <div class="about-us-choose-content">
                        <div class="section-title">
                            <div class="sub-title mb-10">
                                <p>Why Choose Us</p>
                            </div>
                            <div class="title">
                                <h2>
                                    <%= settings.chooseus_title %>
                                </h2>
                            </div>
                        </div>
                        <div class="text">
                            <p> <%- settings.chooseus_desc %>
                            </p>
                        </div>
                        <div class="choose-btn-2">
                            <div class="theme-btn">
                                <a href="/signup">Get Started</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 text-center mt-md-50 mt-xs-50">
                    <div class="choose-3-thumb">
                        <div class="thumb" style="width: 100%;height: 100%;">
                            <img src="/assets/img/aboutus-2.jpg" alt="thumb" style="border-radius: 10%;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Choose  end -->

    <!-- Career start -->
    <div class="career-section pt-80 pb-80 pt-xs-50 pb-xs-50">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-title text-center mb-50">
                        <div class="sub-title mb-10">
                            <p>Choose Your Platform</p>
                        </div>
                        <div class="title ">
                            <h2>Discover Your Gain</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="career-wrap">
                        <div class="content mx-auto text-center">
                            <p>For Recruiters</p>
                            <h4>
                                <a href="#">Discover top talent faster. Post jobs and find
                                    qualified candidates.</a>
                            </h4>
                            <a class="read-more" href="/signup">Join Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="career-wrap ">
                        <div class="content mx-auto text-center">
                            <p>For Job Seekers</p>
                            <h4>
                                <a href="#">Find your next career opportunity from thousands of jobs.</a>
                            </h4>
                            <a class="read-more" href="/signup">Join Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Career end -->
</main>