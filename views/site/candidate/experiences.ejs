<div class="checkout-section <%= padding ? 'pt-150 pt-lg-120 pb-130 pb-lg-70' : 'px-4 py-0' %>">
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-3 ms-auto signup-form">
                <div class="submit-btn">
                    <button id="addproject" type="submit" class="signup-btn btn-1" data-bs-toggle="modal"
                        data-bs-target="#openexperiencemodal">Add</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 cart-list-form">
                <div class="table-responsive">
                    <table class="table">
                        <tbody id="table-grid">
                            <% experiences.collectionData?.forEach(experience=> { %>
                                <tr>
                                    <td class="product-info d-flex justify-content-between">
                                        <div>
                                            <span class="product-name" target="_blank">
                                                <%= experience.position %> At <%= experience.companyName %>
                                            </span>
                                            <div class="serial">
                                                <% const months=[ "January" , "February" , "March" , "April" , "May"
                                                    , "June" , "July" , "August" , "September" , "October" , "November"
                                                    , "December" ] %>
                                                    <%= experience.startDate %>
                                                                -
                                                    <% if (experience.stillworking) { %>
                                                        <%= 'Still present' %>
                                                    <% } else { %>
                                                        <%= experience.endDate %>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <button type="button" data-bs-toggle="modal"
                                                data-bs-target="#openexperiencemodal" data-id="<%= experience._id %>"
                                                class="btn btn-dark bg-transparent experienceedit">
                                                <i class="fa-solid fa-edit text-dark"
                                                    data-id="<%= experience._id %>"></i>
                                            </button>
                                            <button type="button" data-bs-toggle="modal" data-bs-target="#modal-danger"
                                                data-id="<%= experience._id %>"
                                                class="btn btn-dark bg-transparent danger-modal">
                                                <i class="fa-solid fa-trash text-dark"
                                                    data-id="<%= experience._id %>"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <!-- pagination -->
                    <div class="col-lg-12">
                        <% if (experiences.totalPages && experiences.totalDocs> experiences.limit ) { %>
                            <div class="page-pagination justify-content-lg-start justify-content-center">
                                <% for( let i=1; i <=experiences.totalDocs; ++i ) { %>
                                    <a class="<%= experiences.page == i ?'active':'' %>"
                                        href="/profile/<%= user.name %>/experience?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                    <% } %>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="endapi" value="<%= endApi %>">
<div class="modal fade" id="openexperiencemodal" tabindex="-1" aria-labelledby="openprojectmodal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content p-5">
            <form id="submitForm" class="checkout-form">
                <h2 id="experiencehead">Experience</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <label>Company Name</label>
                        <input type="text" placeholder="Enter Company Name" id="companyName" name="companyName"
                            class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <label>Position</label>
                        <input type="text" placeholder="Enter position" id="position" name="position"
                            class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <label>Start Date</label>
                        <input type="date" id="startDate" name="startDate" class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-between">
                            <label>End Date</label>
                            <ul class="checkbox-list style-none">
                                <li>
                                    <input type="checkbox" id="new-account" name="stillworking">
                                    <label for="new-account">Still Working</label>
                                </li>
                            </ul>
                        </div>
                        <input type="date" id="endDate" name="endDate" class="single-input-wrapper">
                    </div>
                    <div class="col-12 other-note-area">
                        <label>Description</label>
                        <textarea placeholder="description" id="description" name="description"
                            spellcheck="false"></textarea>
                    </div>
                    <div class="col signup-form">
                        <div class="submit-btn">
                            <Button id="submitFormBtn" type="submit" class="signup-btn btn-1">Submit</Button>
                        </div>
                    </div> <!-- /.row -->
                </div> <!-- /.user-profile-data -->
        </div>
    </div>
    </form>
</div>
<%- include('../partials/deleteObjectModal') %>