<div class="checkout-section pt-150 pt-lg-120 pb-130 pb-lg-70">
    <div class="container">
        <form id="updateForm" class="checkout-form">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h3 class="cart-title">Create Profile</h3>
                    <div class="user-profile-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Your Name</label>
                                <input type="text" placeholder="Name" class="single-input-wrapper">
                            </div>
                            <div class="col-12">
                                <label>Street Address</label>
                                <input type="text" placeholder="Street Address*" name="address"
                                    class="single-input-wrapper">
                            </div>
                            <div class="col-lg-4">
                                <label>Country</label>
                                <select class="single-input-wrapper select2" style="width: 100%;">
                                    <option selected="selected">Alabama</option>
                                    <option>Alaska</option>
                                    <option>California</option>
                                    <option>Delaware</option>
                                    <option>Tennessee</option>
                                    <option>Texas</option>
                                    <option>Washington</option>
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <label>State</label>
                                <input type="text" placeholder="State*" name="state" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-4">
                                <label>Town/City</label>
                                <input type="text" placeholder="Town/City*" name="city" class="single-input-wrapper">
                            </div>
                            <div class="col-lg-6">
                                <label>Email Id</label>
                                <input type="email" placeholder="Email Address*" name="email"
                                    class="single-input-wrapper">
                            </div>
                            <div class="col-lg-6">
                                <label>Phone Number</label>
                                <input type="number" placeholder="Phone Number*" name="phone"
                                    class="single-input-wrapper">
                            </div>
                            <div class="col signup-form">
                                <div class="submit-btn">
                                    <Button type="submit" class="signup-btn btn-1">Submit</Button>
                                </div>
                            </div>
                        </div> <!-- /.row -->
                    </div> <!-- /.user-profile-data -->
                </div>
            </div>
        </form>
    </div>
</div>