<div class="checkout-section <%= padding ? 'pt-150 pt-lg-120 pb-130 pb-lg-70' : 'px-4 py-0' %>">
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-3 ms-auto signup-form">
                <div class="submit-btn">
                    <button id="addproject" type="submit" class="signup-btn btn-1" data-bs-toggle="modal"
                        data-bs-target="#openeducationmodal">Add</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 cart-list-form">
                <div class="table-responsive">
                    <table class="table">
                        <tbody id="table-grid">
                            <%  educations.collectionData?.forEach(education=> { %>
                                <tr>
                                    <td class="product-info d-flex justify-content-between">
                                        <div>
                                            <span class="product-name" target="_blank">
                                                <%= education.courseName %> from <%=  education.schoolORUniversity %>
                                            </span>
                                            <div class="serial">
                                             Completed in <%= education.completedYear %>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <button type="button" data-bs-toggle="modal"
                                                data-bs-target="#openeducationmodal" data-id="<%= education._id %>"
                                                class="btn btn-dark bg-transparent educationedit">
                                                <i class="fa-solid fa-edit text-dark" data-id="<%= education._id %>"></i>
                                            </button>
                                            <button type="button" data-bs-toggle="modal" data-bs-target="#modal-danger"
                                                data-id="<%= education._id %>"
                                                class="btn btn-dark bg-transparent danger-modal">
                                                <i class="fa-solid fa-trash text-dark" data-id="<%= education._id %>"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <!-- pagination -->
                    <div class="col-lg-12">
                        <% if (educations.totalPages && educations.totalDocs> educations.limit ) { %>
                            <div class="page-pagination justify-content-lg-start justify-content-center">
                                <% for( let i=1; i <=educations.totalDocs; ++i ) { %>
                                    <a class="<%= educations.page == i ?'active':'' %>"
                                        href="/profile/<%= user.name %>/education?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                    <% } %>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="endapi" value="<%= endApi %>">
<div class="modal fade" id="openeducationmodal" tabindex="-1" aria-labelledby="openprojectmodal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content p-5">
            <form id="submitForm" class="checkout-form">
                <h2 id="educationhead">Education</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <label>Course Name</label>
                        <input type="text" placeholder="Enter Course Name" id="courseName" name="courseName"
                            class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <label>Specialization</label>
                        <input type="text" placeholder="Enter Specialization" id="specializedField"
                            name="specializedField" class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <label>Start Date</label>
                        <input type="date" id="startDate" name="startDate" class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <label>End Date</label>
                        <input type="date" id="endDate" name="endDate" class="single-input-wrapper">
                    </div>
                    <div class="col-lg-6">
                        <label>School/University</label>
                        <input type="text" placeholder="Enter your School OR University" id="schoolORUniversity"
                            name="schoolORUniversity" class="single-input-wrapper">
                    </div>
                    <div class="col-12 other-note-area">
                        <label>Description</label>
                        <textarea placeholder="description" id="description" name="description"
                            spellcheck="false"></textarea>
                    </div>
                    <div class="col signup-form">
                        <div class="submit-btn">
                            <Button id="submitFormBtn" type="submit" class="signup-btn btn-1">Submit</Button>
                        </div>
                    </div> <!-- /.row -->
                </div> <!-- /.user-profile-data -->
        </div>
    </div>
    </form>
</div>
<%- include('../partials/deleteObjectModal') %>