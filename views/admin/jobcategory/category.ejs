<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <h1 class="mb-2">Category</h1>
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div>
            <div class="col-md-6 align-content-center">
                <button type="button" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#modal">
                    Add
                </button>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="datatable" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Category</th>
                                    <th>Is Visible</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="table-grid">
                                <% categories?.forEach((category,i)=> { %>
                                    <tr class="table-row">
                                        <td>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <%= category.name %>
                                        </td>
                                        <td>
                                            <label class="switch">
                                                <input type="checkbox" data-id="<%= category._id %>"
                                                    class="status rowId" <%=category.status ? 'checked' :'' %> >
                                                <span class="slider"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <button type="button" data-id="<%= category._id %>"
                                                    class="btn btn-success btn-default edit" data-bs-toggle="modal"
                                                    data-bs-target="#modal">
                                                    <i class="fa-solid fa-pen-to-square"
                                                        data-id="<%= category._id %>"></i>
                                                </button>
                                                <button type="button" data-bs-toggle="modal"
                                                    data-bs-target="#modal-danger" data-id="<%= category._id %>"
                                                    class="btn btn-danger btn-default m-0 danger-modal rowId">
                                                    <i class="fa-solid fa-trash" data-id="<%= category._id %>"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<input type="hidden" id="endapi" value="<%= endApi %>">
<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-5" id="exampleModalLabel">Job Category</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="submitForm" class="form">
                    <label> Category </label>
                    <div class="inputForm">
                        <input placeholder="Enter Job Category" name="name" id="TextINput" class="input" type="text">
                    </div>
                    <label> Category Industry </label>
                    <div class="inputForm">
                        <select name="industryId" id="jobIndustries" style="width: 100%; border: none;">
                            <% jobIndustries.forEach(jobIndustry=> { %>
                                <option value="<%= jobIndustry._id %>">
                                    <%= jobIndustry.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <button id="submitFormBtn" type="submit" class="button-submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>